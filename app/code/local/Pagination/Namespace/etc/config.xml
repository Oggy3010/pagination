<?xml version="1.0"?>
<config>
    <modules>
        <Pagination_Namespace>
            <version>1.0</version>
        </Pagination_Namespace>
    </modules>
    <frontend>
        <routers>
            <pagination_namespace>
                <use>standard</use>
                <args>
                    <module>Pagination_Namespace</module>
                    <frontName>namespace</frontName>
                </args>
            </pagination_namespace>
        </routers>
        <layout>
            <updates>
                <pagination_namespace>
                    <file>pagination.xml</file>
                </pagination_namespace>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <pagination_namespace>
                <class>Pagination_Namespace_Block</class>
            </pagination_namespace>
        </blocks>
        <helpers>
            <pagination_namespace>
                <class>Pagination_Namespace_Helper</class>
            </pagination_namespace>
        </helpers>
    </global>
</config>